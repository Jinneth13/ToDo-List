<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/iconop"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconop"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDo">
        <activity
            android:name=".Teams"
            android:exported="false"
            android:label="@string/title_activity_teams"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".Calendar"
            android:exported="false"
            android:label="@string/title_activity_calendar"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".Lists"
            android:exported="false"
            android:label="@string/title_activity_lists"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".Tasks"
            android:exported="false"
            android:label="@string/title_activity_tasks"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".RecoverPassword"
            android:exported="false"
            android:label="@string/title_activity_recover_password"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".ChangePassword"
            android:exported="false"
            android:label="@string/title_activity_change_password"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".ChangeUsername"
            android:exported="false"
            android:label="@string/title_activity_change_username"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".ChangeEmail"
            android:exported="false"
            android:label="@string/title_activity_change_email"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".Profile"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".Home"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".SignIn"
            android:exported="false"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/Theme.ToDo" />
        <activity
            android:name=".Login"
            android:exported="true"
            android:theme="@style/Theme.ToDo.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token" />
    </application>

</manifest>